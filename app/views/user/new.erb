<h1>新規登録</h1>
    <% @user.errors.full_messages.each do |message| %>
       <div class="error_message">
            <%= message %>
       </div>
   <% end %>
    <%= form_tag("/create") do %>
        <p class = "band">性別</p>
            <%= select_tag 'gender[select]', options_for_select(["男性", "女性"]), :include_blank => true %>

        <p class = "band">メールアドレス</p>
            <input name="email" value="<%=@user.email%>">

        <p class = "band">パスワード</p>
            <input type="password" name="password" value="<%= @user.password %>">

        <p class = "band">ニックネーム</p>
            <input name="name" value="<%=@user.name%>">

        <p class = "band">年齢</p>
            <input type="integer" name="age" value="<%=@user.age%>">

        
            <button type="submit" class =""  name ="" ><font size="2">登録</button>
    <% end %>
