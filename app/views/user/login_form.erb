<h1>ログインフォーム</h1>

    <% if @error_message %>
        <div class="form-error">
            <%= @error_message %>
        </div>
    <% end %>

    <%= form_tag("/login") do %>
        <p>メールアドレス</p>
            <input name="email" value="<%=@email%>">

        <p>パスワード</p>
            <input type="password" name="password" value="<%=@password%>">
            <button type="submit" class =""  name ="" ><font size="2">ログイン</button>
    <% end %>
